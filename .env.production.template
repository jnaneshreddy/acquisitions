# Production Environment Configuration
# This file is a template for production deployment
# Copy to .env.production and fill in actual values

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Arcjet Configuration
ARCJET_ENV=production
ARCJET_KEY=your_production_arcjet_key_here

# Database Configuration (Neon Cloud)
# Replace with your actual Neon Cloud connection string
DATABASE_URL=postgresql://username:password@your-endpoint.neon.tech/dbname?sslmode=require

# JWT Configuration
# Use a strong, random secret in production
JWT_SECRET=your_super_secure_jwt_secret_here_256_bits_minimum

# Production-specific settings
ENABLE_CORS=false
TRUST_PROXY=true

# Optional: Additional production configs
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here